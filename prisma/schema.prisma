generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")    
}

// datasource is when we include your db infos like a 'provider = ' (mongodb,postgre,etc) a url.
// notice that 'DATABASE_URL' are in API/.env

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique 
  name  String 
  age   String? 
}

// notice that 'age String?', the simble '?' means what the field age 
// not a mandatory.
// 'id' field will generate automatically by db
// '@unique' means what this fied is unique






